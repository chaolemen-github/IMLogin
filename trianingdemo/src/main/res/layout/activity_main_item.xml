<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_food_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_food_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_food_img"
        app:layout_constraintTop_toTopOf="@id/iv_food_img" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_food_img"
        app:layout_constraintLeft_toRightOf="@id/iv_food_img" />

    <Button
        android:id="@+id/btn_food_attention"
        android:text="关注"
        app:layout_constraintBottom_toBottomOf="@id/iv_food_img"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/alpha"
        android:layout_width="60dp"
        android:layout_height="30dp" />

</android.support.constraint.ConstraintLayout>